  animation: glitch 2s infinite;
}
@keyframes glitch {
  0% { filter: none; }
  50% { filter: hue-rotate(90deg) contrast(200%); }
  100% { filter: none; }
}
.strike {
  text-decoration: line-through;
  color: #999;
}
